<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <appSettings>
        <add key="MerchantId" value="MERCHANT_001" />
        <add key="PaymentGatewayUrl" value="https://api.paymentgateway.com" />
        <add key="EnableTestMode" value="true" />
        <add key="BatchProcessingEnabled" value="true" />
        <add key="ReportOutputPath" value="Reports\" />
        <add key="LogLevel" value="Info" />
    </appSettings>
    <connectionStrings>
        <add name="DefaultConnection" connectionString="Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=PaymentProcessing;Integrated Security=True" providerName="System.Data.SqlClient" />
    </connectionStrings>
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
</configuration>
